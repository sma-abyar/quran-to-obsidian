[
  {
    "id": 101001,
    "verseNumber": 1,
    "verseKey": "101:1",
    "arabic": "الْقارِعَةُ",
    "persian": "کوبنده،"
  },
  {
    "id": 101002,
    "verseNumber": 2,
    "verseKey": "101:2",
    "arabic": "مَا الْقارِعَةُ",
    "persian": "چیست کوبنده؟"
  },
  {
    "id": 101003,
    "verseNumber": 3,
    "verseKey": "101:3",
    "arabic": "وَ ما أَدْراکَ مَا الْقارِعَةُ",
    "persian": "و تو چه دانی که کوبنده چیست؟"
  },
  {
    "id": 101004,
    "verseNumber": 4,
    "verseKey": "101:4",
    "arabic": "یَوْمَ یَکُونُ النَّاسُ کَالْفَراشِ الْمَبْثُوثِ",
    "persian": "روزی که مردم چون پروانه‌[های‌] پراکنده گردند،"
  },
  {
    "id": 101005,
    "verseNumber": 5,
    "verseKey": "101:5",
    "arabic": "وَ تَکُونُ الْجِبالُ کَالْعِهْنِ الْمَنْفُوشِ",
    "persian": "و کوه‌ها مانند پشم زده‌شده رنگین شود."
  },
  {
    "id": 101006,
    "verseNumber": 6,
    "verseKey": "101:6",
    "arabic": "فَأَمَّا مَنْ ثَقُلَتْ مَوازینُهُ",
    "persian": "اما هر که سنجیده‌هایش سنگین برآید،"
  },
  {
    "id": 101007,
    "verseNumber": 7,
    "verseKey": "101:7",
    "arabic": "فَهُوَ فی‏ عیشَةٍ راضِیَةٍ",
    "persian": "پس وی در زندگی خوشی خواهد بود!"
  },
  {
    "id": 101008,
    "verseNumber": 8,
    "verseKey": "101:8",
    "arabic": "وَ أَمَّا مَنْ خَفَّتْ مَوازینُهُ",
    "persian": "و اما هر که سنجیده‌هایش سبک بر آید،"
  },
  {
    "id": 101009,
    "verseNumber": 9,
    "verseKey": "101:9",
    "arabic": "فَأُمُّهُ هاوِیَةٌ",
    "persian": "پس جایش «هاویه» باشد."
  },
  {
    "id": 101010,
    "verseNumber": 10,
    "verseKey": "101:10",
    "arabic": "وَ ما أَدْراکَ ما هِیَهْ",
    "persian": "و تو چه دانی که آن چیست؟"
  },
  {
    "id": 101011,
    "verseNumber": 11,
    "verseKey": "101:11",
    "arabic": "نارٌ حامِیَةٌ",
    "persian": "آتشی است سوزنده."
  }
]
