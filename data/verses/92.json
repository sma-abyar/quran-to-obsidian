[
  {
    "id": 92001,
    "verseNumber": 1,
    "verseKey": "92:1",
    "arabic": "وَ اللَّیْلِ إِذا یَغْشى‏",
    "persian": "سوگند به شب چون پرده افکند،"
  },
  {
    "id": 92002,
    "verseNumber": 2,
    "verseKey": "92:2",
    "arabic": "وَ النَّهارِ إِذا تَجَلَّى",
    "persian": "سوگند به روز چون جلوه‌گری آغازد،"
  },
  {
    "id": 92003,
    "verseNumber": 3,
    "verseKey": "92:3",
    "arabic": "وَ ما خَلَقَ الذَّکَرَ وَ الْأُنْثى‏",
    "persian": "و [سوگند به‌] آنکه نر و ماده را آفرید،"
  },
  {
    "id": 92004,
    "verseNumber": 4,
    "verseKey": "92:4",
    "arabic": "إِنَّ سَعْیَکُمْ لَشَتَّى",
    "persian": "که همانا تلاش شما پراکنده است."
  },
  {
    "id": 92005,
    "verseNumber": 5,
    "verseKey": "92:5",
    "arabic": "فَأَمَّا مَنْ أَعْطى‏ وَ اتَّقى‏",
    "persian": "اما آنکه [حق خدا را] داد و پروا داشت،"
  },
  {
    "id": 92006,
    "verseNumber": 6,
    "verseKey": "92:6",
    "arabic": "وَ صَدَّقَ بِالْحُسْنى‏",
    "persian": "و [پاداش‌] نیکوتر را تصدیق کرد،"
  },
  {
    "id": 92007,
    "verseNumber": 7,
    "verseKey": "92:7",
    "arabic": "فَسَنُیَسِّرُهُ لِلْیُسْرى‏",
    "persian": "بزودی راه آسانی پیش پای او خواهیم گذاشت."
  },
  {
    "id": 92008,
    "verseNumber": 8,
    "verseKey": "92:8",
    "arabic": "وَ أَمَّا مَنْ بَخِلَ وَ اسْتَغْنى‏",
    "persian": "و اما آنکه بخل ورزید و خود را بی‌نیاز دید،"
  },
  {
    "id": 92009,
    "verseNumber": 9,
    "verseKey": "92:9",
    "arabic": "وَ کَذَّبَ بِالْحُسْنى‏",
    "persian": "و [پاداش‌] نیکوتر را به دروغ گرفت،"
  },
  {
    "id": 92010,
    "verseNumber": 10,
    "verseKey": "92:10",
    "arabic": "فَسَنُیَسِّرُهُ لِلْعُسْرى‏",
    "persian": "بزودی راه دشواری به او خواهیم نمود."
  },
  {
    "id": 92011,
    "verseNumber": 11,
    "verseKey": "92:11",
    "arabic": "وَ ما یُغْنی‏ عَنْهُ مالُهُ إِذا تَرَدَّى",
    "persian": "و چون هلاک شد، [دیگر] مال او به کارش نمی‌آید."
  },
  {
    "id": 92012,
    "verseNumber": 12,
    "verseKey": "92:12",
    "arabic": "إِنَّ عَلَیْنا لَلْهُدى‏",
    "persian": "همانا هدایت بر ماست."
  },
  {
    "id": 92013,
    "verseNumber": 13,
    "verseKey": "92:13",
    "arabic": "وَ إِنَّ لَنا لَلْآخِرَةَ وَ الْأُولى‏",
    "persian": "و در حقیقت، دنیا و آخرت از آن ماست."
  },
  {
    "id": 92014,
    "verseNumber": 14,
    "verseKey": "92:14",
    "arabic": "فَأَنْذَرْتُکُمْ ناراً تَلَظَّى",
    "persian": "پس شما را به آتشی که زبانه می‌کشد هشدار دادم."
  },
  {
    "id": 92015,
    "verseNumber": 15,
    "verseKey": "92:15",
    "arabic": "لا یَصْلاها إِلاَّ الْأَشْقَى",
    "persian": "جز نگون‌بخت‌تر[ین مردم‌] در آن درنیاید:"
  },
  {
    "id": 92016,
    "verseNumber": 16,
    "verseKey": "92:16",
    "arabic": "الَّذی کَذَّبَ وَ تَوَلَّى",
    "persian": "همان که تکذیب کرد و رخ برتافت."
  },
  {
    "id": 92017,
    "verseNumber": 17,
    "verseKey": "92:17",
    "arabic": "وَ سَیُجَنَّبُهَا الْأَتْقَى",
    "persian": "و پاک‌رفتارتر[ین مردم‌] از آن دور داشته خواهد شد:"
  },
  {
    "id": 92018,
    "verseNumber": 18,
    "verseKey": "92:18",
    "arabic": "الَّذی یُؤْتی‏ مالَهُ یَتَزَکَّى",
    "persian": "همان که مال خود را می‌دهد [برای آنکه‌] پاک شود،"
  },
  {
    "id": 92019,
    "verseNumber": 19,
    "verseKey": "92:19",
    "arabic": "وَ ما لِأَحَدٍ عِنْدَهُ مِنْ نِعْمَةٍ تُجْزى‏",
    "persian": "و هیچ کس را به قصد پاداش‌یافتن نعمت نمی‌بخشد،"
  },
  {
    "id": 92020,
    "verseNumber": 20,
    "verseKey": "92:20",
    "arabic": "إِلاَّ ابْتِغاءَ وَجْهِ رَبِّهِ الْأَعْلى‏",
    "persian": "جز خواستن رضای پروردگارش که بسی برتر است [منظوری ندارد]."
  },
  {
    "id": 92021,
    "verseNumber": 21,
    "verseKey": "92:21",
    "arabic": "وَ لَسَوْفَ یَرْضى‏",
    "persian": "و قطعاً بزودی خشنود خواهد شد."
  }
]
