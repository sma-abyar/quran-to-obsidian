[
  {
    "id": 107001,
    "verseNumber": 1,
    "verseKey": "107:1",
    "arabic": "أَ رَأَیْتَ الَّذی یُکَذِّبُ بِالدِّینِ",
    "persian": "آیا کسی را که [روز] جزا را دروغ می‌خواند، دیدی؟"
  },
  {
    "id": 107002,
    "verseNumber": 2,
    "verseKey": "107:2",
    "arabic": "فَذلِکَ الَّذی یَدُعُّ الْیَتیمَ",
    "persian": "این همان کس است که یتیم را بسختی می‌راند،"
  },
  {
    "id": 107003,
    "verseNumber": 3,
    "verseKey": "107:3",
    "arabic": "وَ لا یَحُضُّ عَلى‏ طَعامِ الْمِسْکینِ",
    "persian": "و به خوراک‌دادن بینوا ترغیب نمی‌کند."
  },
  {
    "id": 107004,
    "verseNumber": 4,
    "verseKey": "107:4",
    "arabic": "فَوَیْلٌ لِلْمُصَلِّینَ",
    "persian": "پس وای بر نمازگزارانی"
  },
  {
    "id": 107005,
    "verseNumber": 5,
    "verseKey": "107:5",
    "arabic": "الَّذینَ هُمْ عَنْ صَلاتِهِمْ ساهُونَ",
    "persian": "که از نمازشان غافلند،"
  },
  {
    "id": 107006,
    "verseNumber": 6,
    "verseKey": "107:6",
    "arabic": "الَّذینَ هُمْ یُراؤُنَ",
    "persian": "آنان که ریا می‌کنند،"
  },
  {
    "id": 107007,
    "verseNumber": 7,
    "verseKey": "107:7",
    "arabic": "وَ یَمْنَعُونَ الْماعُونَ",
    "persian": "و از [دادن‌] زکات [و وسایل و مایحتاج خانه‌] خودداری می‌ورزند."
  }
]
