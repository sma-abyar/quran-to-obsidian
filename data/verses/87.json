[
  {
    "id": 87001,
    "verseNumber": 1,
    "verseKey": "87:1",
    "arabic": "سَبِّحِ اسْمَ رَبِّکَ الْأَعْلَى",
    "persian": "نام پروردگار والای خود را به پاکی بستای:"
  },
  {
    "id": 87002,
    "verseNumber": 2,
    "verseKey": "87:2",
    "arabic": "الَّذی خَلَقَ فَسَوَّى",
    "persian": "همان که آفرید و هماهنگی بخشید."
  },
  {
    "id": 87003,
    "verseNumber": 3,
    "verseKey": "87:3",
    "arabic": "وَ الَّذی قَدَّرَ فَهَدى‏",
    "persian": "و آنکه اندازه‌گیری کرد و راه نمود."
  },
  {
    "id": 87004,
    "verseNumber": 4,
    "verseKey": "87:4",
    "arabic": "وَ الَّذی أَخْرَجَ الْمَرْعى‏",
    "persian": "و آنکه چمنزار را برآورد؛"
  },
  {
    "id": 87005,
    "verseNumber": 5,
    "verseKey": "87:5",
    "arabic": "فَجَعَلَهُ غُثاءً أَحْوى‏",
    "persian": "و پس [از چندی‌] آن را خاشاکی تیره‌گون گردانید."
  },
  {
    "id": 87006,
    "verseNumber": 6,
    "verseKey": "87:6",
    "arabic": "سَنُقْرِئُکَ فَلا تَنْسى‏",
    "persian": "ما بزودی [آیات خود را به وسیله سروش غیبی‌] بر تو خواهیم خواند، تا فراموش نکنی؛"
  },
  {
    "id": 87007,
    "verseNumber": 7,
    "verseKey": "87:7",
    "arabic": "إِلاَّ ما شاءَ اللَّهُ إِنَّهُ یَعْلَمُ الْجَهْرَ وَ ما یَخْفى‏",
    "persian": "جز آنچه خدا خواهد، که او آشکار و آنچه را که نهان است می‌داند."
  },
  {
    "id": 87008,
    "verseNumber": 8,
    "verseKey": "87:8",
    "arabic": "وَ نُیَسِّرُکَ لِلْیُسْرى‏",
    "persian": "و برای تو آسانترین [راه‌] را فراهم می‌گردانیم."
  },
  {
    "id": 87009,
    "verseNumber": 9,
    "verseKey": "87:9",
    "arabic": "فَذَکِّرْ إِنْ نَفَعَتِ الذِّکْرى‏",
    "persian": "پس پند ده، اگر پند سود بخشد."
  },
  {
    "id": 87010,
    "verseNumber": 10,
    "verseKey": "87:10",
    "arabic": "سَیَذَّکَّرُ مَنْ یَخْشى‏",
    "persian": "آن کس که ترسد، بزودی عبرت گیرد."
  },
  {
    "id": 87011,
    "verseNumber": 11,
    "verseKey": "87:11",
    "arabic": "وَ یَتَجَنَّبُهَا الْأَشْقَى",
    "persian": "و نگون‌بخت، خود را از آن دور می‌دارد؛"
  },
  {
    "id": 87012,
    "verseNumber": 12,
    "verseKey": "87:12",
    "arabic": "الَّذی یَصْلَى النَّارَ الْکُبْرى‏",
    "persian": "همان کس که در آتشی بزرگ در آید؛"
  },
  {
    "id": 87013,
    "verseNumber": 13,
    "verseKey": "87:13",
    "arabic": "ثُمَّ لا یَمُوتُ فیها وَ لا یَحْیى‏",
    "persian": "آنگاه نه در آن می‌میرد و نه زندگانی می‌یابد."
  },
  {
    "id": 87014,
    "verseNumber": 14,
    "verseKey": "87:14",
    "arabic": "قَدْ أَفْلَحَ مَنْ تَزَکَّى",
    "persian": "رستگار آن کس که خود را پاک گردانید؛"
  },
  {
    "id": 87015,
    "verseNumber": 15,
    "verseKey": "87:15",
    "arabic": "وَ ذَکَرَ اسْمَ رَبِّهِ فَصَلَّى",
    "persian": "و نام پروردگارش را یاد کرد و نماز گزارد."
  },
  {
    "id": 87016,
    "verseNumber": 16,
    "verseKey": "87:16",
    "arabic": "بَلْ تُؤْثِرُونَ الْحَیاةَ الدُّنْیا",
    "persian": "لیکن [شما] زندگی دنیا را بر می‌گزینید؛"
  },
  {
    "id": 87017,
    "verseNumber": 17,
    "verseKey": "87:17",
    "arabic": "وَ الْآخِرَةُ خَیْرٌ وَ أَبْقى‏",
    "persian": "با آنکه [جهان‌] آخرت نیکوتر و پایدارتر است."
  },
  {
    "id": 87018,
    "verseNumber": 18,
    "verseKey": "87:18",
    "arabic": "إِنَّ هذا لَفِی الصُّحُفِ الْأُولى‏",
    "persian": "قطعاً در صحیفه‌های گذشته این [معنی‌] هست،"
  },
  {
    "id": 87019,
    "verseNumber": 19,
    "verseKey": "87:19",
    "arabic": "صُحُفِ إِبْراهیمَ وَ مُوسى‏",
    "persian": "صحیفه‌های ابراهیم و موسی."
  }
]
