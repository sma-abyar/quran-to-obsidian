[
  {
    "id": 77001,
    "verseNumber": 1,
    "verseKey": "77:1",
    "arabic": "وَ الْمُرْسَلاتِ عُرْفاً",
    "persian": "سوگند به فرستادگان پی‌درپی،"
  },
  {
    "id": 77002,
    "verseNumber": 2,
    "verseKey": "77:2",
    "arabic": "فَالْعاصِفاتِ عَصْفاً",
    "persian": "که سخت توفنده‌اند."
  },
  {
    "id": 77003,
    "verseNumber": 3,
    "verseKey": "77:3",
    "arabic": "وَ النَّاشِراتِ نَشْراً",
    "persian": "و سوگند به افشانندگان افشانگر،"
  },
  {
    "id": 77004,
    "verseNumber": 4,
    "verseKey": "77:4",
    "arabic": "فَالْفارِقاتِ فَرْقاً",
    "persian": "که [میان حق و باطل‌] جداگرند،"
  },
  {
    "id": 77005,
    "verseNumber": 5,
    "verseKey": "77:5",
    "arabic": "فَالْمُلْقِیاتِ ذِکْراً",
    "persian": "و القاکننده وحی‌اند."
  },
  {
    "id": 77006,
    "verseNumber": 6,
    "verseKey": "77:6",
    "arabic": "عُذْراً أَوْ نُذْراً",
    "persian": "خواه عذری باشد یا هشداری."
  },
  {
    "id": 77007,
    "verseNumber": 7,
    "verseKey": "77:7",
    "arabic": "إِنَّما تُوعَدُونَ لَواقِعٌ",
    "persian": "که آنچه وعده یافته‌اید قطعاً رخ خواهد داد."
  },
  {
    "id": 77008,
    "verseNumber": 8,
    "verseKey": "77:8",
    "arabic": "فَإِذَا النُّجُومُ طُمِسَتْ",
    "persian": "پس وقتی که ستارگان محو شوند،"
  },
  {
    "id": 77009,
    "verseNumber": 9,
    "verseKey": "77:9",
    "arabic": "وَ إِذَا السَّماءُ فُرِجَتْ",
    "persian": "و آنگاه که آسمان بشکافد،"
  },
  {
    "id": 77010,
    "verseNumber": 10,
    "verseKey": "77:10",
    "arabic": "وَ إِذَا الْجِبالُ نُسِفَتْ",
    "persian": "و آنگاه که کوه‌ها از جا کنده شوند،"
  },
  {
    "id": 77011,
    "verseNumber": 11,
    "verseKey": "77:11",
    "arabic": "وَ إِذَا الرُّسُلُ أُقِّتَتْ",
    "persian": "و آنگاه که پیمبران به میقات آیند،"
  },
  {
    "id": 77012,
    "verseNumber": 12,
    "verseKey": "77:12",
    "arabic": "لِأَیِّ یَوْمٍ أُجِّلَتْ",
    "persian": "برای چه روزی تعیین وقت شده است؟"
  },
  {
    "id": 77013,
    "verseNumber": 13,
    "verseKey": "77:13",
    "arabic": "لِیَوْمِ الْفَصْلِ",
    "persian": "برای روز داوری."
  },
  {
    "id": 77014,
    "verseNumber": 14,
    "verseKey": "77:14",
    "arabic": "وَ ما أَدْراکَ ما یَوْمُ الْفَصْلِ",
    "persian": "و تو چه دانی که روز داوری چیست؟"
  },
  {
    "id": 77015,
    "verseNumber": 15,
    "verseKey": "77:15",
    "arabic": "وَیْلٌ یَوْمَئِذٍ لِلْمُکَذِّبینَ",
    "persian": "آن روز وای بر تکذیب‌کنندگان!"
  },
  {
    "id": 77016,
    "verseNumber": 16,
    "verseKey": "77:16",
    "arabic": "أَ لَمْ نُهْلِکِ الْأَوَّلینَ",
    "persian": "مگر پیشینیان را هلاک نکردیم؟"
  },
  {
    "id": 77017,
    "verseNumber": 17,
    "verseKey": "77:17",
    "arabic": "ثُمَّ نُتْبِعُهُمُ الْآخِرینَ",
    "persian": "سپس از پی آنان پسینیان را می‌بریم."
  },
  {
    "id": 77018,
    "verseNumber": 18,
    "verseKey": "77:18",
    "arabic": "کَذلِکَ نَفْعَلُ بِالْمُجْرِمینَ",
    "persian": "با مجرمان چنین می‌کنیم."
  },
  {
    "id": 77019,
    "verseNumber": 19,
    "verseKey": "77:19",
    "arabic": "وَیْلٌ یَوْمَئِذٍ لِلْمُکَذِّبینَ",
    "persian": "آن روز وای بر تکذیب‌کنندگان."
  },
  {
    "id": 77020,
    "verseNumber": 20,
    "verseKey": "77:20",
    "arabic": "أَ لَمْ نَخْلُقْکُمْ مِنْ ماءٍ مَهینٍ",
    "persian": "مگر شما را از آبی بی‌مقدار نیافریدیم؟"
  },
  {
    "id": 77021,
    "verseNumber": 21,
    "verseKey": "77:21",
    "arabic": "فَجَعَلْناهُ فی‏ قَرارٍ مَکینٍ",
    "persian": "پس آن را در جایگاهی استوار نهادیم،"
  },
  {
    "id": 77022,
    "verseNumber": 22,
    "verseKey": "77:22",
    "arabic": "إِلى‏ قَدَرٍ مَعْلُومٍ",
    "persian": "تا مدّتی معیّن!"
  },
  {
    "id": 77023,
    "verseNumber": 23,
    "verseKey": "77:23",
    "arabic": "فَقَدَرْنا فَنِعْمَ الْقادِرُونَ",
    "persian": "و توانا آمدیم، و چه نیک تواناییم."
  },
  {
    "id": 77024,
    "verseNumber": 24,
    "verseKey": "77:24",
    "arabic": "وَیْلٌ یَوْمَئِذٍ لِلْمُکَذِّبینَ",
    "persian": "آن روز وای بر تکذیب‌کنندگان."
  },
  {
    "id": 77025,
    "verseNumber": 25,
    "verseKey": "77:25",
    "arabic": "أَ لَمْ نَجْعَلِ الْأَرْضَ کِفاتاً",
    "persian": "مگر زمین را محل اجتماع نگردانیدیم؟"
  },
  {
    "id": 77026,
    "verseNumber": 26,
    "verseKey": "77:26",
    "arabic": "أَحْیاءً وَ أَمْواتاً",
    "persian": "چه برای مردگان چه زندگان."
  },
  {
    "id": 77027,
    "verseNumber": 27,
    "verseKey": "77:27",
    "arabic": "وَ جَعَلْنا فیها رَواسِیَ شامِخاتٍ وَ أَسْقَیْناکُمْ ماءً فُراتاً",
    "persian": "و کوه‌های بلند در آن نهادیم و به شما آبی گوارا نوشانیدیم."
  },
  {
    "id": 77028,
    "verseNumber": 28,
    "verseKey": "77:28",
    "arabic": "وَیْلٌ یَوْمَئِذٍ لِلْمُکَذِّبینَ",
    "persian": "آن روز وای بر تکذیب‌کنندگان."
  },
  {
    "id": 77029,
    "verseNumber": 29,
    "verseKey": "77:29",
    "arabic": "انْطَلِقُوا إِلى‏ ما کُنْتُمْ بِهِ تُکَذِّبُونَ",
    "persian": "بروید به سوی همان چیزی که آن را تکذیب می‌کردید."
  },
  {
    "id": 77030,
    "verseNumber": 30,
    "verseKey": "77:30",
    "arabic": "انْطَلِقُوا إِلى‏ ظِلٍّ ذی ثَلاثِ شُعَبٍ",
    "persian": "بروید به سوی [آن‌] دود سه شاخه،"
  },
  {
    "id": 77031,
    "verseNumber": 31,
    "verseKey": "77:31",
    "arabic": "لا ظَلیلٍ وَ لا یُغْنی‏ مِنَ اللَّهَبِ",
    "persian": "نه سایه‌دار است و نه از شعله [آتش‌] حفاظت می‌کند."
  },
  {
    "id": 77032,
    "verseNumber": 32,
    "verseKey": "77:32",
    "arabic": "إِنَّها تَرْمی‏ بِشَرَرٍ کَالْقَصْرِ",
    "persian": "[دوزخ‌] چون کاخی [بلند] شراره می‌افکند،"
  },
  {
    "id": 77033,
    "verseNumber": 33,
    "verseKey": "77:33",
    "arabic": "کَأَنَّهُ جِمالَتٌ صُفْرٌ",
    "persian": "گویی شترانی زرد رنگند."
  },
  {
    "id": 77034,
    "verseNumber": 34,
    "verseKey": "77:34",
    "arabic": "وَیْلٌ یَوْمَئِذٍ لِلْمُکَذِّبینَ",
    "persian": "آن روز وای بر تکذیب‌کنندگان."
  },
  {
    "id": 77035,
    "verseNumber": 35,
    "verseKey": "77:35",
    "arabic": "هذا یَوْمُ لا یَنْطِقُونَ",
    "persian": "این، روزی است که دم نمی‌زنند."
  },
  {
    "id": 77036,
    "verseNumber": 36,
    "verseKey": "77:36",
    "arabic": "وَ لا یُؤْذَنُ لَهُمْ فَیَعْتَذِرُونَ",
    "persian": "و رخصت نمی‌یابند تا پوزش خواهند."
  },
  {
    "id": 77037,
    "verseNumber": 37,
    "verseKey": "77:37",
    "arabic": "وَیْلٌ یَوْمَئِذٍ لِلْمُکَذِّبینَ",
    "persian": "آن روز وای بر تکذیب‌کنندگان."
  },
  {
    "id": 77038,
    "verseNumber": 38,
    "verseKey": "77:38",
    "arabic": "هذا یَوْمُ الْفَصْلِ جَمَعْناکُمْ وَ الْأَوَّلینَ",
    "persian": "این [همان‌] روز داوری است شما و [جمله‌] پیشینیان را گرد می‌آوریم."
  },
  {
    "id": 77039,
    "verseNumber": 39,
    "verseKey": "77:39",
    "arabic": "فَإِنْ کانَ لَکُمْ کَیْدٌ فَکیدُونِ",
    "persian": "پس اگر حیلتی دارید، در برابر من بسگالید."
  },
  {
    "id": 77040,
    "verseNumber": 40,
    "verseKey": "77:40",
    "arabic": "وَیْلٌ یَوْمَئِذٍ لِلْمُکَذِّبینَ",
    "persian": "آن روز وای بر تکذیب‌کنندگان."
  },
  {
    "id": 77041,
    "verseNumber": 41,
    "verseKey": "77:41",
    "arabic": "إِنَّ الْمُتَّقینَ فی‏ ظِلالٍ وَ عُیُونٍ",
    "persian": "اهل تقوا در زیر سایه‌ها و بر کنار چشمه‌سارانند،"
  },
  {
    "id": 77042,
    "verseNumber": 42,
    "verseKey": "77:42",
    "arabic": "وَ فَواکِهَ مِمَّا یَشْتَهُونَ",
    "persian": "با هر میوه‌ای که خوش داشته باشند."
  },
  {
    "id": 77043,
    "verseNumber": 43,
    "verseKey": "77:43",
    "arabic": "کُلُوا وَ اشْرَبُوا هَنیئاً بِما کُنْتُمْ تَعْمَلُونَ",
    "persian": "به [پاداش‌] آنچه می‌کردید، بخورید و بیاشامید؛ گواراتان باد."
  },
  {
    "id": 77044,
    "verseNumber": 44,
    "verseKey": "77:44",
    "arabic": "إِنَّا کَذلِکَ نَجْزِی الْمُحْسِنینَ",
    "persian": "ما نیکوکاران را چنین پاداش می‌دهیم."
  },
  {
    "id": 77045,
    "verseNumber": 45,
    "verseKey": "77:45",
    "arabic": "وَیْلٌ یَوْمَئِذٍ لِلْمُکَذِّبینَ",
    "persian": "آن روز وای بر تکذیب‌کنندگان."
  },
  {
    "id": 77046,
    "verseNumber": 46,
    "verseKey": "77:46",
    "arabic": "کُلُوا وَ تَمَتَّعُوا قَلیلاً إِنَّکُمْ مُجْرِمُونَ",
    "persian": "[ای کافران،] بخورید و اندکی برخوردار شوید که شما گناهکارید."
  },
  {
    "id": 77047,
    "verseNumber": 47,
    "verseKey": "77:47",
    "arabic": "وَیْلٌ یَوْمَئِذٍ لِلْمُکَذِّبینَ",
    "persian": "[ولی‌] آن روز وای بر تکذیب‌کنندگان."
  },
  {
    "id": 77048,
    "verseNumber": 48,
    "verseKey": "77:48",
    "arabic": "وَ إِذا قیلَ لَهُمُ ارْکَعُوا لا یَرْکَعُونَ",
    "persian": "و چون به آنان گفته شود: «رکوع کنید»، به رکوع نمی‌روند."
  },
  {
    "id": 77049,
    "verseNumber": 49,
    "verseKey": "77:49",
    "arabic": "وَیْلٌ یَوْمَئِذٍ لِلْمُکَذِّبینَ",
    "persian": "آن روز وای بر تکذیب‌کنندگان."
  },
  {
    "id": 77050,
    "verseNumber": 50,
    "verseKey": "77:50",
    "arabic": "فَبِأَیِّ حَدیثٍ بَعْدَهُ یُؤْمِنُونَ",
    "persian": "پس به کدامین سخن پس از [قرآن‌] ایمان می‌آورند؟"
  }
]
