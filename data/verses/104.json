[
  {
    "id": 104001,
    "verseNumber": 1,
    "verseKey": "104:1",
    "arabic": "وَیْلٌ لِکُلِّ هُمَزَةٍ لُمَزَةٍ",
    "persian": "وای بر هر بدگوی عیبجویی،"
  },
  {
    "id": 104002,
    "verseNumber": 2,
    "verseKey": "104:2",
    "arabic": "الَّذی جَمَعَ مالاً وَ عَدَّدَهُ",
    "persian": "که مالی گرد آورد و برشمردش."
  },
  {
    "id": 104003,
    "verseNumber": 3,
    "verseKey": "104:3",
    "arabic": "یَحْسَبُ أَنَّ مالَهُ أَخْلَدَهُ",
    "persian": "پندارد که مالش او را جاوید کرده،"
  },
  {
    "id": 104004,
    "verseNumber": 4,
    "verseKey": "104:4",
    "arabic": "کَلاَّ لَیُنْبَذَنَّ فِی الْحُطَمَةِ",
    "persian": "ولی نه! قطعاً در آتش خردکننده فرو افکنده خواهد شد."
  },
  {
    "id": 104005,
    "verseNumber": 5,
    "verseKey": "104:5",
    "arabic": "وَ ما أَدْراکَ مَا الْحُطَمَةُ",
    "persian": "و تو چه دانی که آن آتش خردکننده چیست؟"
  },
  {
    "id": 104006,
    "verseNumber": 6,
    "verseKey": "104:6",
    "arabic": "نارُ اللَّهِ الْمُوقَدَةُ",
    "persian": "آتش افروخته خدا[یی‌] است."
  },
  {
    "id": 104007,
    "verseNumber": 7,
    "verseKey": "104:7",
    "arabic": "الَّتی‏ تَطَّلِعُ عَلَى الْأَفْئِدَةِ",
    "persian": "[آتشی‌] که به دلها می‌رسد."
  },
  {
    "id": 104008,
    "verseNumber": 8,
    "verseKey": "104:8",
    "arabic": "إِنَّها عَلَیْهِمْ مُؤْصَدَةٌ",
    "persian": "آنان را در میان فرامی‌گیرد."
  },
  {
    "id": 104009,
    "verseNumber": 9,
    "verseKey": "104:9",
    "arabic": "فی‏ عَمَدٍ مُمَدَّدَةٍ",
    "persian": "[آتشی که‌] در ستونهایی دراز است."
  }
]
