[
  {
    "id": 88001,
    "verseNumber": 1,
    "verseKey": "88:1",
    "arabic": "هَلْ أَتاکَ حَدیثُ الْغاشِیَةِ",
    "persian": "آیا خبر «غاشیه» به تو رسیده است؟"
  },
  {
    "id": 88002,
    "verseNumber": 2,
    "verseKey": "88:2",
    "arabic": "وُجُوهٌ یَوْمَئِذٍ خاشِعَةٌ",
    "persian": "در آن روز، چهره‌هایی زبونند،"
  },
  {
    "id": 88003,
    "verseNumber": 3,
    "verseKey": "88:3",
    "arabic": "عامِلَةٌ ناصِبَةٌ",
    "persian": "که تلاش کرده، رنج [بیهوده‌] برده‌اند."
  },
  {
    "id": 88004,
    "verseNumber": 4,
    "verseKey": "88:4",
    "arabic": "تَصْلى‏ ناراً حامِیَةً",
    "persian": "[ناچار] در آتشی سوزان درآیند."
  },
  {
    "id": 88005,
    "verseNumber": 5,
    "verseKey": "88:5",
    "arabic": "تُسْقى‏ مِنْ عَیْنٍ آنِیَةٍ",
    "persian": "از چشمه‌ای داغ نوشانیده شوند."
  },
  {
    "id": 88006,
    "verseNumber": 6,
    "verseKey": "88:6",
    "arabic": "لَیْسَ لَهُمْ طَعامٌ إِلاَّ مِنْ ضَریعٍ",
    "persian": "خوراکی جز خار خشک ندارند،"
  },
  {
    "id": 88007,
    "verseNumber": 7,
    "verseKey": "88:7",
    "arabic": "لا یُسْمِنُ وَ لا یُغْنی‏ مِنْ جُوعٍ",
    "persian": "[که‌] نه فربه کند، و نه گرسنگی را باز دارد."
  },
  {
    "id": 88008,
    "verseNumber": 8,
    "verseKey": "88:8",
    "arabic": "وُجُوهٌ یَوْمَئِذٍ ناعِمَةٌ",
    "persian": "در آن روز، چهره‌هایی شادابند."
  },
  {
    "id": 88009,
    "verseNumber": 9,
    "verseKey": "88:9",
    "arabic": "لِسَعْیِها راضِیَةٌ",
    "persian": "از کوشش خود خشنودند."
  },
  {
    "id": 88010,
    "verseNumber": 10,
    "verseKey": "88:10",
    "arabic": "فی‏ جَنَّةٍ عالِیَةٍ",
    "persian": "در بهشت برین‌اند."
  },
  {
    "id": 88011,
    "verseNumber": 11,
    "verseKey": "88:11",
    "arabic": "لا تَسْمَعُ فیها لاغِیَةً",
    "persian": "سخن بیهوده‌ای در آنجا نشنوند."
  },
  {
    "id": 88012,
    "verseNumber": 12,
    "verseKey": "88:12",
    "arabic": "فیها عَیْنٌ جارِیَةٌ",
    "persian": "در آن، چشمه‌ای روان باشد."
  },
  {
    "id": 88013,
    "verseNumber": 13,
    "verseKey": "88:13",
    "arabic": "فیها سُرُرٌ مَرْفُوعَةٌ",
    "persian": "تختهایی بلند در آنجاست."
  },
  {
    "id": 88014,
    "verseNumber": 14,
    "verseKey": "88:14",
    "arabic": "وَ أَکْوابٌ مَوْضُوعَةٌ",
    "persian": "و قدحهایی نهاده شده."
  },
  {
    "id": 88015,
    "verseNumber": 15,
    "verseKey": "88:15",
    "arabic": "وَ نَمارِقُ مَصْفُوفَةٌ",
    "persian": "و بالشهایی پهلوی هم [چیده‌]."
  },
  {
    "id": 88016,
    "verseNumber": 16,
    "verseKey": "88:16",
    "arabic": "وَ زَرابِیُّ مَبْثُوثَةٌ",
    "persian": "و فرشهایی [زربفت‌] گسترده."
  },
  {
    "id": 88017,
    "verseNumber": 17,
    "verseKey": "88:17",
    "arabic": "أَ فَلا یَنْظُرُونَ إِلَى الْإِبِلِ کَیْفَ خُلِقَتْ",
    "persian": "آیا به شتر نمی‌نگرند که چگونه آفریده شده؟"
  },
  {
    "id": 88018,
    "verseNumber": 18,
    "verseKey": "88:18",
    "arabic": "وَ إِلَى السَّماءِ کَیْفَ رُفِعَتْ",
    "persian": "و به آسمان که چگونه برافراشته شده؟"
  },
  {
    "id": 88019,
    "verseNumber": 19,
    "verseKey": "88:19",
    "arabic": "وَ إِلَى الْجِبالِ کَیْفَ نُصِبَتْ",
    "persian": "و به کوه‌ها که چگونه برپا داشته شده؟"
  },
  {
    "id": 88020,
    "verseNumber": 20,
    "verseKey": "88:20",
    "arabic": "وَ إِلَى الْأَرْضِ کَیْفَ سُطِحَتْ",
    "persian": "و به زمین که چگونه گسترده شده است؟"
  },
  {
    "id": 88021,
    "verseNumber": 21,
    "verseKey": "88:21",
    "arabic": "فَذَکِّرْ إِنَّما أَنْتَ مُذَکِّرٌ",
    "persian": "پس تذکر ده که تو تنها تذکردهنده‌ای."
  },
  {
    "id": 88022,
    "verseNumber": 22,
    "verseKey": "88:22",
    "arabic": "لَسْتَ عَلَیْهِمْ بِمُصَیْطِرٍ",
    "persian": "بر آنان تسلّطی نداری،"
  },
  {
    "id": 88023,
    "verseNumber": 23,
    "verseKey": "88:23",
    "arabic": "إِلاَّ مَنْ تَوَلَّى وَ کَفَرَ",
    "persian": "مگر کسی که روی بگرداند و کفر ورزد،"
  },
  {
    "id": 88024,
    "verseNumber": 24,
    "verseKey": "88:24",
    "arabic": "فَیُعَذِّبُهُ اللَّهُ الْعَذابَ الْأَکْبَرَ",
    "persian": "که خدا او را به آن عذاب بزرگتر عذاب کند."
  },
  {
    "id": 88025,
    "verseNumber": 25,
    "verseKey": "88:25",
    "arabic": "إِنَّ إِلَیْنا إِیابَهُمْ",
    "persian": "در حقیقت، بازگشت آنان به سوی ماست،"
  },
  {
    "id": 88026,
    "verseNumber": 26,
    "verseKey": "88:26",
    "arabic": "ثُمَّ إِنَّ عَلَیْنا حِسابَهُمْ",
    "persian": "آنگاه حساب [خواستن از] آنان به عهده ماست."
  }
]
