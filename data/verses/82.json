[
  {
    "id": 82001,
    "verseNumber": 1,
    "verseKey": "82:1",
    "arabic": "إِذَا السَّماءُ انْفَطَرَتْ",
    "persian": "آنگاه که آسمان زهم بشکافد،"
  },
  {
    "id": 82002,
    "verseNumber": 2,
    "verseKey": "82:2",
    "arabic": "وَ إِذَا الْکَواکِبُ انْتَثَرَتْ",
    "persian": "و آنگاه که اختران پراکنده شوند،"
  },
  {
    "id": 82003,
    "verseNumber": 3,
    "verseKey": "82:3",
    "arabic": "وَ إِذَا الْبِحارُ فُجِّرَتْ",
    "persian": "و آنگاه که دریاها از جا برکنده گردند،"
  },
  {
    "id": 82004,
    "verseNumber": 4,
    "verseKey": "82:4",
    "arabic": "وَ إِذَا الْقُبُورُ بُعْثِرَتْ",
    "persian": "و آنگاه که گورها زیر و زبر شوند،"
  },
  {
    "id": 82005,
    "verseNumber": 5,
    "verseKey": "82:5",
    "arabic": "عَلِمَتْ نَفْسٌ ما قَدَّمَتْ وَ أَخَّرَتْ",
    "persian": "هر نفسی آنچه را پیش فرستاده و بازپس گذاشته، بداند."
  },
  {
    "id": 82006,
    "verseNumber": 6,
    "verseKey": "82:6",
    "arabic": "یا أَیُّهَا الْإِنْسانُ ما غَرَّکَ بِرَبِّکَ الْکَریمِ",
    "persian": "ای انسان، چه چیز تو را در باره پروردگار بزرگوارت مغرور ساخته؟"
  },
  {
    "id": 82007,
    "verseNumber": 7,
    "verseKey": "82:7",
    "arabic": "الَّذی خَلَقَکَ فَسَوَّاکَ فَعَدَلَکَ",
    "persian": "همان کس که تو را آفرید، و [اندام‌] تو را درست کرد، و [آنگاه‌] تو را سامان بخشید."
  },
  {
    "id": 82008,
    "verseNumber": 8,
    "verseKey": "82:8",
    "arabic": "فی‏ أَیِّ صُورَةٍ ما شاءَ رَکَّبَکَ",
    "persian": "و به هر صورتی که خواست، تو را ترکیب کرد."
  },
  {
    "id": 82009,
    "verseNumber": 9,
    "verseKey": "82:9",
    "arabic": "کَلاَّ بَلْ تُکَذِّبُونَ بِالدِّینِ",
    "persian": "با این همه، شما منکر [روز] جزایید."
  },
  {
    "id": 82010,
    "verseNumber": 10,
    "verseKey": "82:10",
    "arabic": "وَ إِنَّ عَلَیْکُمْ لَحافِظینَ",
    "persian": "و قطعاً بر شما نگهبانانی [گماشته شده‌]اند:"
  },
  {
    "id": 82011,
    "verseNumber": 11,
    "verseKey": "82:11",
    "arabic": "کِراماً کاتِبینَ",
    "persian": "[فرشتگان‌] بزرگواری که نویسندگان [اعمال شما] هستند؛"
  },
  {
    "id": 82012,
    "verseNumber": 12,
    "verseKey": "82:12",
    "arabic": "یَعْلَمُونَ ما تَفْعَلُونَ",
    "persian": "آنچه را می‌کنید، می‌دانند."
  },
  {
    "id": 82013,
    "verseNumber": 13,
    "verseKey": "82:13",
    "arabic": "إِنَّ الْأَبْرارَ لَفی‏ نَعیمٍ",
    "persian": "قطعاً نیکان به بهشت اندرند."
  },
  {
    "id": 82014,
    "verseNumber": 14,
    "verseKey": "82:14",
    "arabic": "وَ إِنَّ الْفُجَّارَ لَفی‏ جَحیمٍ",
    "persian": "و بی‌شک، بدکاران در دوزخند."
  },
  {
    "id": 82015,
    "verseNumber": 15,
    "verseKey": "82:15",
    "arabic": "یَصْلَوْنَها یَوْمَ الدِّینِ",
    "persian": "روز جزا در آنجا درآیند،"
  },
  {
    "id": 82016,
    "verseNumber": 16,
    "verseKey": "82:16",
    "arabic": "وَ ما هُمْ عَنْها بِغائِبینَ",
    "persian": "و از آن [عذاب‌] دور نخواهند بود."
  },
  {
    "id": 82017,
    "verseNumber": 17,
    "verseKey": "82:17",
    "arabic": "وَ ما أَدْراکَ ما یَوْمُ الدِّینِ",
    "persian": "و تو چه دانی که چیست روز جزا؟"
  },
  {
    "id": 82018,
    "verseNumber": 18,
    "verseKey": "82:18",
    "arabic": "ثُمَّ ما أَدْراکَ ما یَوْمُ الدِّینِ",
    "persian": "باز چه دانی که چیست روز جزا؟"
  },
  {
    "id": 82019,
    "verseNumber": 19,
    "verseKey": "82:19",
    "arabic": "یَوْمَ لا تَمْلِکُ نَفْسٌ لِنَفْسٍ شَیْئاً وَ الْأَمْرُ یَوْمَئِذٍ لِلَّهِ",
    "persian": "روزی که کسی برای کسی هیچ اختیاری ندارد؛ و در آن روز، فرمان از آنِ خداست."
  }
]
