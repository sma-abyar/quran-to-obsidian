[
  {
    "id": 80001,
    "verseNumber": 1,
    "verseKey": "80:1",
    "arabic": "عَبَسَ وَ تَوَلَّى",
    "persian": "چهره در هم کشید و روی گردانید،"
  },
  {
    "id": 80002,
    "verseNumber": 2,
    "verseKey": "80:2",
    "arabic": "أَنْ جاءَهُ الْأَعْمى‏",
    "persian": "که آن مرد نابینا پیش او آمد؛"
  },
  {
    "id": 80003,
    "verseNumber": 3,
    "verseKey": "80:3",
    "arabic": "وَ ما یُدْریکَ لَعَلَّهُ یَزَّکَّى",
    "persian": "و تو چه دانی، شاید او به پاکی گراید،"
  },
  {
    "id": 80004,
    "verseNumber": 4,
    "verseKey": "80:4",
    "arabic": "أَوْ یَذَّکَّرُ فَتَنْفَعَهُ الذِّکْرى‏",
    "persian": "یا پند پذیرد و اندرز سودش دهد."
  },
  {
    "id": 80005,
    "verseNumber": 5,
    "verseKey": "80:5",
    "arabic": "أَمَّا مَنِ اسْتَغْنى‏",
    "persian": "اما آن کس که خود را بی‌نیاز می‌پندارد،"
  },
  {
    "id": 80006,
    "verseNumber": 6,
    "verseKey": "80:6",
    "arabic": "فَأَنْتَ لَهُ تَصَدَّى",
    "persian": "تو بدو می‌پردازی؛"
  },
  {
    "id": 80007,
    "verseNumber": 7,
    "verseKey": "80:7",
    "arabic": "وَ ما عَلَیْکَ أَلاَّ یَزَّکَّى",
    "persian": "با آنکه اگر پاک نگردد، بر تو [مسؤولیتی‌] نیست."
  },
  {
    "id": 80008,
    "verseNumber": 8,
    "verseKey": "80:8",
    "arabic": "وَ أَمَّا مَنْ جاءَکَ یَسْعى‏",
    "persian": "و اما آن کس که شتابان پیش تو آمد،"
  },
  {
    "id": 80009,
    "verseNumber": 9,
    "verseKey": "80:9",
    "arabic": "وَ هُوَ یَخْشى‏",
    "persian": "در حالی که [از خدا] می‌ترسید،"
  },
  {
    "id": 80010,
    "verseNumber": 10,
    "verseKey": "80:10",
    "arabic": "فَأَنْتَ عَنْهُ تَلَهَّى",
    "persian": "تو از او به دیگران می‌پردازی."
  },
  {
    "id": 80011,
    "verseNumber": 11,
    "verseKey": "80:11",
    "arabic": "کَلاَّ إِنَّها تَذْکِرَةٌ",
    "persian": "زنهار [چنین مکن‌] این [آیات‌] پندی است."
  },
  {
    "id": 80012,
    "verseNumber": 12,
    "verseKey": "80:12",
    "arabic": "فَمَنْ شاءَ ذَکَرَهُ",
    "persian": "تا هر که خواهد، از آن پند گیرد."
  },
  {
    "id": 80013,
    "verseNumber": 13,
    "verseKey": "80:13",
    "arabic": "فی‏ صُحُفٍ مُکَرَّمَةٍ",
    "persian": "در صحیفه‌هایی ارجمند،"
  },
  {
    "id": 80014,
    "verseNumber": 14,
    "verseKey": "80:14",
    "arabic": "مَرْفُوعَةٍ مُطَهَّرَةٍ",
    "persian": "والا و پاک‌شده،"
  },
  {
    "id": 80015,
    "verseNumber": 15,
    "verseKey": "80:15",
    "arabic": "بِأَیْدی سَفَرَةٍ",
    "persian": "به دست فرشتگانی،"
  },
  {
    "id": 80016,
    "verseNumber": 16,
    "verseKey": "80:16",
    "arabic": "کِرامٍ بَرَرَةٍ",
    "persian": "ارجمند و نیکوکار."
  },
  {
    "id": 80017,
    "verseNumber": 17,
    "verseKey": "80:17",
    "arabic": "قُتِلَ الْإِنْسانُ ما أَکْفَرَهُ",
    "persian": "کشته باد انسان، چه ناسپاس است"
  },
  {
    "id": 80018,
    "verseNumber": 18,
    "verseKey": "80:18",
    "arabic": "مِنْ أَیِّ شَیْ‏ءٍ خَلَقَهُ",
    "persian": "او را از چه چیز آفریده است؟"
  },
  {
    "id": 80019,
    "verseNumber": 19,
    "verseKey": "80:19",
    "arabic": "مِنْ نُطْفَةٍ خَلَقَهُ فَقَدَّرَهُ",
    "persian": "از نطفه‌ای خلقش کرد و اندازه مقررش بخشید."
  },
  {
    "id": 80020,
    "verseNumber": 20,
    "verseKey": "80:20",
    "arabic": "ثُمَّ السَّبیلَ یَسَّرَهُ",
    "persian": "سپس راه را بر او آسان گردانید."
  },
  {
    "id": 80021,
    "verseNumber": 21,
    "verseKey": "80:21",
    "arabic": "ثُمَّ أَماتَهُ فَأَقْبَرَهُ",
    "persian": "آنگاه به مرگش رسانید و در قبرش نهاد."
  },
  {
    "id": 80022,
    "verseNumber": 22,
    "verseKey": "80:22",
    "arabic": "ثُمَّ إِذا شاءَ أَنْشَرَهُ",
    "persian": "سپس چون بخواهد او را برانگیزد."
  },
  {
    "id": 80023,
    "verseNumber": 23,
    "verseKey": "80:23",
    "arabic": "کَلاَّ لَمَّا یَقْضِ ما أَمَرَهُ",
    "persian": "ولی نه! هنوز آنچه را به او دستور داده، به جای نیاورده است."
  },
  {
    "id": 80024,
    "verseNumber": 24,
    "verseKey": "80:24",
    "arabic": "فَلْیَنْظُرِ الْإِنْسانُ إِلى‏ طَعامِهِ",
    "persian": "پس انسان باید به خوراک خود بنگرد،"
  },
  {
    "id": 80025,
    "verseNumber": 25,
    "verseKey": "80:25",
    "arabic": "أَنَّا صَبَبْنَا الْماءَ صَبًّا",
    "persian": "که ما آب را به صورت بارشی فرو ریختیم؛"
  },
  {
    "id": 80026,
    "verseNumber": 26,
    "verseKey": "80:26",
    "arabic": "ثُمَّ شَقَقْنَا الْأَرْضَ شَقًّا",
    "persian": "آنگاه زمین را با شکافتنی [لازم‌] شکافتیم؛"
  },
  {
    "id": 80027,
    "verseNumber": 27,
    "verseKey": "80:27",
    "arabic": "فَأَنْبَتْنا فیها حَبًّا",
    "persian": "پس در آن، دانه رویانیدیم."
  },
  {
    "id": 80028,
    "verseNumber": 28,
    "verseKey": "80:28",
    "arabic": "وَ عِنَباً وَ قَضْباً",
    "persian": "و انگور و سبزی،"
  },
  {
    "id": 80029,
    "verseNumber": 29,
    "verseKey": "80:29",
    "arabic": "وَ زَیْتُوناً وَ نَخْلاً",
    "persian": "و زیتون و درخت خرما،"
  },
  {
    "id": 80030,
    "verseNumber": 30,
    "verseKey": "80:30",
    "arabic": "وَ حَدائِقَ غُلْباً",
    "persian": "و باغهای انبوه،"
  },
  {
    "id": 80031,
    "verseNumber": 31,
    "verseKey": "80:31",
    "arabic": "وَ فاکِهَةً وَ أَبًّا",
    "persian": "و میوه و چراگاه،"
  },
  {
    "id": 80032,
    "verseNumber": 32,
    "verseKey": "80:32",
    "arabic": "مَتاعاً لَکُمْ وَ لِأَنْعامِکُمْ",
    "persian": "[تا وسیله‌] استفاده شما و دامهایتان باشد."
  },
  {
    "id": 80033,
    "verseNumber": 33,
    "verseKey": "80:33",
    "arabic": "فَإِذا جاءَتِ الصَّاخَّةُ",
    "persian": "پس چون فریاد گوش‌خراش دررسد؛"
  },
  {
    "id": 80034,
    "verseNumber": 34,
    "verseKey": "80:34",
    "arabic": "یَوْمَ یَفِرُّ الْمَرْءُ مِنْ أَخیهِ",
    "persian": "روزی که آدمی از برادرش،"
  },
  {
    "id": 80035,
    "verseNumber": 35,
    "verseKey": "80:35",
    "arabic": "وَ أُمِّهِ وَ أَبیهِ",
    "persian": "و از مادرش و پدرش."
  },
  {
    "id": 80036,
    "verseNumber": 36,
    "verseKey": "80:36",
    "arabic": "وَ صاحِبَتِهِ وَ بَنیهِ",
    "persian": "و از همسرش و پسرانش می‌گریزد،"
  },
  {
    "id": 80037,
    "verseNumber": 37,
    "verseKey": "80:37",
    "arabic": "لِکُلِّ امْرِئٍ مِنْهُمْ یَوْمَئِذٍ شَأْنٌ یُغْنیهِ",
    "persian": "در آن روز، هر کسی از آنان را کاری است که او را به خود مشغول می‌دارد."
  },
  {
    "id": 80038,
    "verseNumber": 38,
    "verseKey": "80:38",
    "arabic": "وُجُوهٌ یَوْمَئِذٍ مُسْفِرَةٌ",
    "persian": "در آن روز، چهره‌هایی درخشانند،"
  },
  {
    "id": 80039,
    "verseNumber": 39,
    "verseKey": "80:39",
    "arabic": "ضاحِکَةٌ مُسْتَبْشِرَةٌ",
    "persian": "خندان [و] شادانند."
  },
  {
    "id": 80040,
    "verseNumber": 40,
    "verseKey": "80:40",
    "arabic": "وَ وُجُوهٌ یَوْمَئِذٍ عَلَیْها غَبَرَةٌ",
    "persian": "و در آن روز، چهره‌هایی است که بر آنها غبار نشسته،"
  },
  {
    "id": 80041,
    "verseNumber": 41,
    "verseKey": "80:41",
    "arabic": "تَرْهَقُها قَتَرَةٌ",
    "persian": "[و] آنها را تاریکی پوشانده است؛"
  },
  {
    "id": 80042,
    "verseNumber": 42,
    "verseKey": "80:42",
    "arabic": "أُولئِکَ هُمُ الْکَفَرَةُ الْفَجَرَةُ",
    "persian": "آنان همان کافران بدکارند."
  }
]
