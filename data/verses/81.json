[
  {
    "id": 81001,
    "verseNumber": 1,
    "verseKey": "81:1",
    "arabic": "إِذَا الشَّمْسُ کُوِّرَتْ",
    "persian": "آنگاه که خورشید به هم درپیچد،"
  },
  {
    "id": 81002,
    "verseNumber": 2,
    "verseKey": "81:2",
    "arabic": "وَ إِذَا النُّجُومُ انْکَدَرَتْ",
    "persian": "و آنگه که ستارگان همی‌تیره شوند،"
  },
  {
    "id": 81003,
    "verseNumber": 3,
    "verseKey": "81:3",
    "arabic": "وَ إِذَا الْجِبالُ سُیِّرَتْ",
    "persian": "و آنگاه که کوهها به رفتار آیند."
  },
  {
    "id": 81004,
    "verseNumber": 4,
    "verseKey": "81:4",
    "arabic": "وَ إِذَا الْعِشارُ عُطِّلَتْ",
    "persian": "وقتی شتران ماده وانهاده شوند،"
  },
  {
    "id": 81005,
    "verseNumber": 5,
    "verseKey": "81:5",
    "arabic": "وَ إِذَا الْوُحُوشُ حُشِرَتْ",
    "persian": "و آنگه که وحوش را همی‌گرد آرند،"
  },
  {
    "id": 81006,
    "verseNumber": 6,
    "verseKey": "81:6",
    "arabic": "وَ إِذَا الْبِحارُ سُجِّرَتْ",
    "persian": "دریاها آنگه که جوشان گردند،"
  },
  {
    "id": 81007,
    "verseNumber": 7,
    "verseKey": "81:7",
    "arabic": "وَ إِذَا النُّفُوسُ زُوِّجَتْ",
    "persian": "و آنگاه که جانها به هم درپیوندند،"
  },
  {
    "id": 81008,
    "verseNumber": 8,
    "verseKey": "81:8",
    "arabic": "وَ إِذَا الْمَوْؤُدَةُ سُئِلَتْ",
    "persian": "پرسند چو زان دخترک زنده به‌گور:"
  },
  {
    "id": 81009,
    "verseNumber": 9,
    "verseKey": "81:9",
    "arabic": "بِأَیِّ ذَنْبٍ قُتِلَتْ",
    "persian": "به کدامین گناه کشته شده است؟"
  },
  {
    "id": 81010,
    "verseNumber": 10,
    "verseKey": "81:10",
    "arabic": "وَ إِذَا الصُّحُفُ نُشِرَتْ",
    "persian": "و آنگاه که نامه‌ها زهم بگشایند،"
  },
  {
    "id": 81011,
    "verseNumber": 11,
    "verseKey": "81:11",
    "arabic": "وَ إِذَا السَّماءُ کُشِطَتْ",
    "persian": "و آنگاه که آسمان زجا کنده شود،"
  },
  {
    "id": 81012,
    "verseNumber": 12,
    "verseKey": "81:12",
    "arabic": "وَ إِذَا الْجَحیمُ سُعِّرَتْ",
    "persian": "و آنگه که جحیم را برافروزانند،"
  },
  {
    "id": 81013,
    "verseNumber": 13,
    "verseKey": "81:13",
    "arabic": "وَ إِذَا الْجَنَّةُ أُزْلِفَتْ",
    "persian": "و آنگه که بهشت را فرا پیش آرند،"
  },
  {
    "id": 81014,
    "verseNumber": 14,
    "verseKey": "81:14",
    "arabic": "عَلِمَتْ نَفْسٌ ما أَحْضَرَتْ",
    "persian": "هر نَفْس بداند چه فراهم دیده."
  },
  {
    "id": 81015,
    "verseNumber": 15,
    "verseKey": "81:15",
    "arabic": "فَلا أُقْسِمُ بِالْخُنَّسِ",
    "persian": "نه، نه! سوگند به اختران گردان،"
  },
  {
    "id": 81016,
    "verseNumber": 16,
    "verseKey": "81:16",
    "arabic": "الْجَوارِ الْکُنَّسِ",
    "persian": "[کز دیده‌] نهان شوند و از نو آیند،"
  },
  {
    "id": 81017,
    "verseNumber": 17,
    "verseKey": "81:17",
    "arabic": "وَ اللَّیْلِ إِذا عَسْعَسَ",
    "persian": "سوگند به شب چون پشت گرداند،"
  },
  {
    "id": 81018,
    "verseNumber": 18,
    "verseKey": "81:18",
    "arabic": "وَ الصُّبْحِ إِذا تَنَفَّسَ",
    "persian": "سوگند به صبح چون دمیدن گیرد،"
  },
  {
    "id": 81019,
    "verseNumber": 19,
    "verseKey": "81:19",
    "arabic": "إِنَّهُ لَقَوْلُ رَسُولٍ کَریمٍ",
    "persian": "که [قرآن‌] سخن فرشته بزرگواری است."
  },
  {
    "id": 81020,
    "verseNumber": 20,
    "verseKey": "81:20",
    "arabic": "ذی قُوَّةٍ عِنْدَ ذِی الْعَرْشِ مَکینٍ",
    "persian": "نیرومند [که‌] پیش خداوند عرش، بلندپایگاه است."
  },
  {
    "id": 81021,
    "verseNumber": 21,
    "verseKey": "81:21",
    "arabic": "مُطاعٍ ثَمَّ أَمینٍ",
    "persian": "در آنجا [هم‌] مطاع [و هم‌] امین است."
  },
  {
    "id": 81022,
    "verseNumber": 22,
    "verseKey": "81:22",
    "arabic": "وَ ما صاحِبُکُمْ بِمَجْنُونٍ",
    "persian": "و رفیق شما مجنون نیست؛"
  },
  {
    "id": 81023,
    "verseNumber": 23,
    "verseKey": "81:23",
    "arabic": "وَ لَقَدْ رَآهُ بِالْأُفُقِ الْمُبینِ",
    "persian": "و قطعاً آن [فرشته وحی‌] را در افق رخشان دیده."
  },
  {
    "id": 81024,
    "verseNumber": 24,
    "verseKey": "81:24",
    "arabic": "وَ ما هُوَ عَلَى الْغَیْبِ بِضَنینٍ",
    "persian": "و او در امر غیب بخیل نیست."
  },
  {
    "id": 81025,
    "verseNumber": 25,
    "verseKey": "81:25",
    "arabic": "وَ ما هُوَ بِقَوْلِ شَیْطانٍ رَجیمٍ",
    "persian": "و [قرآن‌] نیست سخن دیو رجیم."
  },
  {
    "id": 81026,
    "verseNumber": 26,
    "verseKey": "81:26",
    "arabic": "فَأَیْنَ تَذْهَبُونَ",
    "persian": "پس به کجا می‌روید؟"
  },
  {
    "id": 81027,
    "verseNumber": 27,
    "verseKey": "81:27",
    "arabic": "إِنْ هُوَ إِلاَّ ذِکْرٌ لِلْعالَمینَ",
    "persian": "این [سخن‌] بجز پندی برای عالمیان نیست؛"
  },
  {
    "id": 81028,
    "verseNumber": 28,
    "verseKey": "81:28",
    "arabic": "لِمَنْ شاءَ مِنْکُمْ أَنْ یَسْتَقیمَ",
    "persian": "برای هر یک از شما که خواهد به راه راست رود."
  },
  {
    "id": 81029,
    "verseNumber": 29,
    "verseKey": "81:29",
    "arabic": "وَ ما تَشاؤُنَ إِلاَّ أَنْ یَشاءَ اللَّهُ رَبُّ الْعالَمینَ",
    "persian": "و تا خدا، پروردگار جهانها، نخواهد، [شما نیز] نخواهید خواست."
  }
]
