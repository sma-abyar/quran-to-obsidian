[
  {
    "id": 96001,
    "verseNumber": 1,
    "verseKey": "96:1",
    "arabic": "اقْرَأْ بِاسْمِ رَبِّکَ الَّذی خَلَقَ",
    "persian": "بخوان به نام پروردگارت که آفرید."
  },
  {
    "id": 96002,
    "verseNumber": 2,
    "verseKey": "96:2",
    "arabic": "خَلَقَ الْإِنْسانَ مِنْ عَلَقٍ",
    "persian": "انسان را از عَلَق آفرید."
  },
  {
    "id": 96003,
    "verseNumber": 3,
    "verseKey": "96:3",
    "arabic": "اقْرَأْ وَ رَبُّکَ الْأَکْرَمُ",
    "persian": "بخوان، و پروردگار تو کریمترین [کریمان‌] است."
  },
  {
    "id": 96004,
    "verseNumber": 4,
    "verseKey": "96:4",
    "arabic": "الَّذی عَلَّمَ بِالْقَلَمِ",
    "persian": "همان کس که به وسیله قلم آموخت."
  },
  {
    "id": 96005,
    "verseNumber": 5,
    "verseKey": "96:5",
    "arabic": "عَلَّمَ الْإِنْسانَ ما لَمْ یَعْلَمْ",
    "persian": "آنچه را که انسان نمی‌دانست [بتدریج به او] آموخت."
  },
  {
    "id": 96006,
    "verseNumber": 6,
    "verseKey": "96:6",
    "arabic": "کَلاَّ إِنَّ الْإِنْسانَ لَیَطْغى‏",
    "persian": "حقاً که انسان سرکشی می‌کند،"
  },
  {
    "id": 96007,
    "verseNumber": 7,
    "verseKey": "96:7",
    "arabic": "أَنْ رَآهُ اسْتَغْنى‏",
    "persian": "همین که خود را بی‌نیاز پندارد."
  },
  {
    "id": 96008,
    "verseNumber": 8,
    "verseKey": "96:8",
    "arabic": "إِنَّ إِلى‏ رَبِّکَ الرُّجْعى‏",
    "persian": "در حقیقت، بازگشت به سوی پروردگار توست."
  },
  {
    "id": 96009,
    "verseNumber": 9,
    "verseKey": "96:9",
    "arabic": "أَ رَأَیْتَ الَّذی یَنْهى‏",
    "persian": "آیا دیدی آن کس را که باز می‌داشت،"
  },
  {
    "id": 96010,
    "verseNumber": 10,
    "verseKey": "96:10",
    "arabic": "عَبْداً إِذا صَلَّى",
    "persian": "بنده‌ای را آنگاه که نماز می‌گزارد؟"
  },
  {
    "id": 96011,
    "verseNumber": 11,
    "verseKey": "96:11",
    "arabic": "أَ رَأَیْتَ إِنْ کانَ عَلَى الْهُدى‏",
    "persian": "چه پنداری اگر او بر هدایت باشد،"
  },
  {
    "id": 96012,
    "verseNumber": 12,
    "verseKey": "96:12",
    "arabic": "أَوْ أَمَرَ بِالتَّقْوى‏",
    "persian": "یا به پرهیزگاری وادارد [برای او بهتر نیست‌]؟"
  },
  {
    "id": 96013,
    "verseNumber": 13,
    "verseKey": "96:13",
    "arabic": "أَ رَأَیْتَ إِنْ کَذَّبَ وَ تَوَلَّى",
    "persian": "[و باز] آیا چه پنداری [که‌] اگر او به تکذیب پردازد و روی برگرداند [چه کیفری در پیش دارد]؟"
  },
  {
    "id": 96014,
    "verseNumber": 14,
    "verseKey": "96:14",
    "arabic": "أَ لَمْ یَعْلَمْ بِأَنَّ اللَّهَ یَرى‏",
    "persian": "مگر ندانسته که خدا می‌بیند؟"
  },
  {
    "id": 96015,
    "verseNumber": 15,
    "verseKey": "96:15",
    "arabic": "کَلاَّ لَئِنْ لَمْ یَنْتَهِ لَنَسْفَعاً بِالنَّاصِیَةِ",
    "persian": "زنهار، اگر باز نایستد، موی پیشانی [او] را سخت بگیریم؛"
  },
  {
    "id": 96016,
    "verseNumber": 16,
    "verseKey": "96:16",
    "arabic": "ناصِیَةٍ کاذِبَةٍ خاطِئَةٍ",
    "persian": "[همان‌] موی پیشانی دروغزن گناه‌پیشه را."
  },
  {
    "id": 96017,
    "verseNumber": 17,
    "verseKey": "96:17",
    "arabic": "فَلْیَدْعُ نادِیَهُ",
    "persian": "[بگو] تا گروه خود را بخواند."
  },
  {
    "id": 96018,
    "verseNumber": 18,
    "verseKey": "96:18",
    "arabic": "سَنَدْعُ الزَّبانِیَةَ",
    "persian": "بزودی آتشبانان را فرا خوانیم."
  },
  {
    "id": 96019,
    "verseNumber": 19,
    "verseKey": "96:19",
    "arabic": "کَلاَّ لا تُطِعْهُ وَ اسْجُدْ وَ اقْتَرِبْ",
    "persian": "زنهار! فرمانش مَبَر، و سجده کن، و خود را [به خدا] نزدیک گردان."
  }
]
